<div class="uk-container uk-container-small">
  <h1>Listing all articles<small><%= link_to "Create New Article", new_article_path, { :class=>"btn btn-primary pull-right" } %></small></h1>
  

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td>
          <%= link_to "Edit", edit_article_path(article[:id]), { :class=>"btn btn-default btn-sm" } %>
          <%= link_to "Show", article_path(article), { :class=>"btn btn-primary btn-sm" } %>
          <%= link_to 'Delete', article_path(article), :class=>"btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>